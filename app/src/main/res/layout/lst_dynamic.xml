<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <net.dev.mylib.view.ImageView.CircularImage
            android:id="@+id/img_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/pictures_no" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/font_black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/dynamic_bar_bg"
                    android:gravity="center"
                    android:paddingRight="4dp"
                    android:text="00000"
                    android:textColor="@color/main_red"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btn_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:src="@drawable/icon_search_clear"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textColor="@color/font_grey"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="6dp"
                    android:ellipsize="end"
                    android:drawableLeft="@drawable/with_the_dynamic_centre_location"
                    android:singleLine="true"
                    android:textColor="@color/font_grey"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@color/font_line"/>
    <ImageView
        android:id="@+id/img_body"
        android:layout_width="fill_parent"
        android:layout_height="260dip"
        android:scaleType="centerCrop"
        android:src="@drawable/pictures_no" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@color/font_line"/>
    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="6dp"
        android:textColor="@color/font_black"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dip"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical|bottom">

        <TextView
            android:id="@+id/tv_commentNum"
            android:layout_width="wrap_content"
            android:layout_height="28dip"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical|bottom"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/font_grey_b8"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="28dip"
                android:layout_height="28dip"
                android:padding="5dp"
                android:src="@drawable/like_icon" />

            <TextView
                android:id="@+id/tv_praiseNum"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center_vertical"
                android:layout_marginRight="20dip"
                android:layout_toRightOf="@+id/btn_Review"
                android:text="0"
                android:textColor="@color/font_grey"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/iv_review"
                android:layout_width="28dip"
                android:layout_height="28dip"
                android:layout_marginRight="20dip"
                android:padding="5dp"
                android:src="@drawable/review_icon" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="28dip"
                android:layout_height="28dip"
                android:layout_marginRight="10dip"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/moment_share_icon" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/font_line" />
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/light_gray" />
</LinearLayout>