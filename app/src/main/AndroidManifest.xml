<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anykey.balala" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <!-- 往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取手机状态权限的权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 获取手机网络的权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 短信权限 -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <!-- 获取GPS经纬度权限 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 获取相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".AppBalala"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivityDemo"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LoginActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.NewUserActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="portrait" />
        <!-- email注册 -->
        <activity
            android:name=".activity.EmailRegister"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="portrait" />
        <!-- 上传用户头像和语音简介 -->
        <activity
            android:name=".activity.UploadInfoActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="portrait" />
        <!-- 注册填写用户信息 -->
        <activity
            android:name=".activity.ProfileActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ChatRoom"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"/>

        <activity
            android:name=".activity.SendDynamicActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="portrait" />

        <!-- 监听开机启动的广播，用于启动后台服务 -->
        <receiver android:name=".receiver.BackgroundReceiver" >
            <intent-filter android:priority="1000" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
                <action android:name="com.anykey.balala.manual" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </receiver>

        <!-- 后台服务 -->
        <service
            android:name=".service.BackgroundService"
            android:enabled="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </service>

        <!-- bugSnag错误发送 -->
        <meta-data
            android:name="com.bugsnag.android.API_KEY"
            android:value="e5397e39826ecae9ea423aeb5410d357" />
        <!-- fir.im代码监控 -->
        <meta-data
            android:name="BUG_HD_SDK_GENERAL_KEY"
            android:value="bdd136ee2172a39446044837553b8f5e" />
        <!-- Facebook 相关配置 -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationName"
            android:value="@string/facebook_app_name" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider1633643760247985"
            android:exported="true" />

        <!-- ActiveAndroid 数据库名称 -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="Balala.db" />
        <!-- ActiveAndroid 数据库版本控制 -->
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <!-- 配置Model 类，加速启动.分隔符号:, -->
        <meta-data
            android:name="AA_MODELS"
            android:value="com.anykey.balala.model.ExampleDBModel" />


    </application>

</manifest>
